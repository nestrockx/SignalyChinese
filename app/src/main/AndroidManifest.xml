<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".SignalyChineseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_temple_x"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_temple_x_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Starting"
        tools:targetApi="34">
        <activity
            android:name=".views.SchoolWritingActivity"
            android:theme="@style/Theme.SignalyChinese"
            android:exported="false" />
        <activity
            android:name=".views.HistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.SignalyChinese" />
        <activity
            android:name=".views.SchoolActivity"
            android:exported="false"
            android:theme="@style/Theme.SignalyChinese" />
        <activity
            android:name=".views.CameraActivity"
            android:exported="false"
            android:theme="@style/Theme.SignalyChinese" />
        <activity
            android:name=".views.HamburgerActivity"
            android:exported="false"
            android:theme="@style/Theme.SignalyChinese" />
        <activity
            android:name=".views.DefinitionWordActivity"
            android:exported="false"
            android:theme="@style/Theme.SignalyChinese" />
        <activity
            android:name=".views.FlashCardsActivity"
            android:exported="false"
            android:theme="@style/Theme.SignalyChinese" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>